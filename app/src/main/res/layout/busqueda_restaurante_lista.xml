<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imgMiRestaurante"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/ic_no_image_available"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFeeeeee"/>

        <LinearLayout
            android:id="@+id/restaurantes_contenedor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/restaurante_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Nombre Restaurante" />

            <TextView
                android:id="@+id/restaurante_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Descripcion" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>